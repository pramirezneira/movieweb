<!DOCTYPE html>
<html>
<head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h1>Resultado de la Búsqueda</h1>
<h3>Peliculas</h3>
<% if (movies.length === 0) { %>
    <p>No hay resultados de peliculas.</p>
<% } else { %>
    <ul>
        <% movies.forEach((movie) => { %>
            <li><a href="/pelicula/<%= movie.movie_id %>"><%= movie.title %></a></li>
        <% }); %>
    </ul>
<% } %>
<h3>Actores</h3>
<% if (actors.length === 0) { %>
    <p>No hay resultados de actores.</p>
<% } else { %>
    <ul>
        <% actors.forEach((actor) => { %>
            <li><a href="/actor/<%= actor.person_id %>"><%= actor.person_name %></a></li>
        <% }); %>
    </ul>
<% } %>
<h3>Directores</h3>
<% if (directors.length === 0) { %>
    <p>No hay resultados de directores.</p>
<% } else { %>
    <ul>
        <% directors.forEach((director) => { %>
            <li><a href="/director/<%= director.person_id %>"><%= director.person_name %></a></li>
        <% }); %>
    </ul>
<% } %>
<p></p>
<div id="inicio"><a href="/">Inicio</a></div>
</body>
</html>